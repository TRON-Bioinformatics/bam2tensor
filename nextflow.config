params.memory = 15g
params.cpus = 8

profiles {
  conda {
    process.conda = "$baseDir/environment.yml"
    conda.enabled = true
    params.enable_conda = true
    conda { createTimeout = "120 min" }
  }
  debug { process.beforeScript = 'echo $HOSTNAME' }
  test {
    timeline.enabled = false
    report.enabled = false
    trace.enabled = false
    dag.enabled = false
  }
}
